<div>
    <h2>Producto</h2>
    <hr />
    <table>
        <thead>
            <tr>
                <td>Producto</td>
                <td>Descripción</td>
                <td>Precio</td>
                <td>Código</td>
                <td>Stock</td>
                <td>Categoria</td>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{this.title}}</td>
                <td>{{this.description}}</td>
                <td>{{this.price}}</td>
                <td>{{this.code}}</td>
                <td>{{this.stock}}</td>
                <td>{{this.category}}</td>
            </tr>
        </tbody>
    </table>

    <form action="/api/carts/65e617f6d8786b8bff70b7a7/product/{{this._id}}" method="POST">
        <button type="submit">Agregar al carrito</button>
    </form>
</div>

